<body>
  <% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
  <% end %>

  <div class="container homecontainer">
    <div class='card indexbox' style="width: 30rem;">
      <div class='card-block'>
        <h2 class="card-title title">Weather Station</h2>
        <p class="card-text text"><em>Check your weather here, there, or anywhere!</em></p>
        <div class="buttons">
          <% if current_user %>
          Logged in as <%= current_user.email %>.
          <button class='btn-secondary'><%= link_to "Log out", logout_path %></button>
          <% else %>
          <button class='btn-secondary'><%= link_to "Sign up", signup_path %></button>
          <button class='btn-secondary'><%= link_to "Log in", login_path %></button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</body>
